<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-EQConsole.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- Combined File Target - All EQConsole related logs (EQConsole + EQProtocol) -->
    <target xsi:type="File" name="combinedfile" fileName="../logs/EQConsole-Combined-${shortdate}.log"
            layout="${longdate} ${level:uppercase=true} [${logger:shortName=true}] ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveFileName="../logs/archive/EQConsole-Combined-{#}.log" />

    <!-- Console Target -->
    <target xsi:type="Console" name="logconsole"
            layout="${time} [${level:uppercase=true:padding=5}] ${logger:shortName=true:padding=15} ${message} ${exception:format=tostring}" />

    <!-- Debug Output Target -->
    <target xsi:type="Debugger" name="debugger"
            layout="${time} [${level:uppercase=true}] ${logger:shortName=true} ${message}" />

    <!-- Individual component files (optional, for detailed debugging) -->
    <target xsi:type="File" name="consolefile" fileName="../logs/EQConsole-Only-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] [${logger}] ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveFileName="../logs/archive/EQConsole-Only-{#}.log" />

    <!-- Specialized logs for debugging -->
    <target xsi:type="File" name="networkfile" fileName="../logs/Network-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] [${logger:shortName=true}] ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveFileName="../logs/archive/Network-{#}.log" />

    <target xsi:type="File" name="movementfile" fileName="../logs/Movement-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] [${logger:shortName=true}] ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveFileName="../logs/archive/Movement-{#}.log" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- Reduce noise from Microsoft and System loggers first -->
    <logger name="Microsoft.*" minlevel="Warn" writeTo="combinedfile" final="true" />
    <logger name="System.*" minlevel="Warn" writeTo="combinedfile" final="true" />

    <!-- COMBINED FILE: All EQConsole and EQProtocol logs together -->
    <logger name="*" minlevel="Debug" writeTo="combinedfile" />

    <!-- Console logging: INFO and above to reduce noise -->
    <logger name="*" minlevel="Info" writeTo="logconsole" />

    <!-- Debug output: DEBUG and above when debugging -->
    <logger name="*" minlevel="Debug" writeTo="debugger" />

    <!-- OPTIONAL: Individual component files for detailed debugging -->
    <!-- EQConsole-specific logs only -->
    <logger name="eqconsole.*" minlevel="Debug" writeTo="consolefile" final="false" />

    <!-- Specialized debugging logs -->
    <logger name="*Stream*" minlevel="Debug" writeTo="networkfile" final="false" />
    <logger name="*Packet*" minlevel="Debug" writeTo="networkfile" final="false" />
    <logger name="*Network*" minlevel="Debug" writeTo="networkfile" final="false" />
    <logger name="*Socket*" minlevel="Debug" writeTo="networkfile" final="false" />

    <logger name="*Movement*" minlevel="Debug" writeTo="movementfile" final="false" />
    <logger name="*Navigation*" minlevel="Debug" writeTo="movementfile" final="false" />
  </rules>
</nlog>