<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-EQProtocol.txt">

  <!-- the targets to write to -->
  <targets>
    <!-- NOTE: EQProtocol logs are now combined with the consuming applications -->
    <!-- This config is kept for standalone testing of the library only -->

    <!-- Debug Output Target -->
    <target xsi:type="Debugger" name="debugger"
            layout="${time} [${level:uppercase=true}] ${logger:shortName=true} ${message}" />

    <!-- Console Target for standalone testing -->
    <target xsi:type="Console" name="logconsole"
            layout="${time} [${level:uppercase=true:padding=5}] ${logger:shortName=true:padding=15} ${message} ${exception:format=tostring}" />

    <!-- Standalone testing file (rarely used) -->
    <target xsi:type="File" name="standalonefile" fileName="../logs/EQProtocol-Standalone-${shortdate}.log"
            layout="${longdate} ${level:uppercase=true} [${logger}] ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveFileName="../logs/archive/EQProtocol-Standalone-{#}.log" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- NOTE: In normal operation, EQProtocol logs go to consuming application's combined files -->
    <!-- These rules only apply when EQProtocol is run standalone for testing -->

    <!-- Reduce noise from Microsoft and System loggers -->
    <logger name="Microsoft.*" minlevel="Warn" writeTo="standalonefile" final="true" />
    <logger name="System.*" minlevel="Warn" writeTo="standalonefile" final="true" />

    <!-- Standalone file logging: All levels DEBUG and above -->
    <logger name="*" minlevel="Debug" writeTo="standalonefile" />

    <!-- Console logging: INFO and above to reduce noise -->
    <logger name="*" minlevel="Debug" writeTo="logconsole" />

    <!-- Debug output: DEBUG and above when debugging -->
    <logger name="*" minlevel="Debug" writeTo="debugger" />
  </rules>
</nlog>