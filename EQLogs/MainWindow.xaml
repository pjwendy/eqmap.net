<Window x:Class="EQLogs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EQLogs"
        xmlns:controls="clr-namespace:EQLogs.Controls"
        mc:Ignorable="d"
        Title="EQLogs - Packet Analyzer" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Height="40">
            <Button Command="{Binding LoadAvailableLogFilesCommand}" Content="Refresh Server Logs" Padding="10,5"/>
            <Separator/>
            <Button Command="{Binding LoadSelectedLogFileCommand}" Content="Load Selected Log" Padding="10,5" IsEnabled="{Binding SelectedLogFile, Converter={StaticResource NullToBooleanConverter}}"/>
            <Button Command="{Binding LoadBotLogFileCommand}" Content="Load Bot Log..." Padding="10,5"/>
            <Button Command="{Binding LoadEQMapLogFileCommand}" Content="Load EQMap Log..." Padding="10,5"/>
            <Separator/>
            <Button Command="{Binding ComparePacketsCommand}" Content="Compare Packets" Padding="10,5"/>
            <Separator/>
            <Button Command="{Binding ShowGenericParserDiagnosticsCommand}" Content="Parser Info" Padding="10,5" ToolTip="Show generic parser diagnostic information"/>
            <Button Command="{Binding TestSessionParsingCommand}" Content="Test Session" Padding="10,5" ToolTip="Test session parsing functionality"/>
            <Separator/>

            <!-- Session Filtering -->
            <TextBlock Text="Session:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox Width="220" ItemsSource="{Binding AvailableSessions}" SelectedItem="{Binding SelectedSession}"
                      ToolTip="Select a session to automatically filter packets by session number (resets on server restart)"/>
            <Button Command="{Binding ClearSessionFilterCommand}" Content="Clear" Padding="10,5"
                    ToolTip="Clear session filter and show all packets"/>
            <Separator/>

            <!-- General Text Filtering -->
            <TextBox Width="200" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                     x:Name="FilterTextBox" VerticalContentAlignment="Center"
                     ToolTip="Filter packets or server log"/>
            <Button Command="{Binding FilterPacketsCommand}" CommandParameter="{Binding Text, ElementName=FilterTextBox}"
                    Content="Filter" Padding="10,5"/>
            <Button Command="{Binding ClearServerLogFilterCommand}" Content="Clear Filter" Padding="10,5"
                    ToolTip="Clear server log filter and reload original content"/>
        </ToolBar>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Log Files Panel -->
            <GroupBox Grid.Column="0" Header="Available Log Files" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListBox Grid.Row="0" ItemsSource="{Binding AvailableLogFiles}" 
                             SelectedItem="{Binding SelectedLogFile}"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding LastModified, StringFormat='Modified: {0:yyyy-MM-dd HH:mm}'}" 
                                               FontSize="10" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Size, StringFormat='Size: {0:N0} bytes'}" 
                                               FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Total: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding AvailableLogFiles.Count}"/>
                        <TextBlock Text=" files" Margin="0,0,10,0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="Gray"/>
            
            <!-- Packet List Panel -->
            <GroupBox Grid.Column="2" Header="Packets" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Packet List Tabs -->
                    <TabControl Grid.Row="0" Grid.RowSpan="2" SelectedIndex="{Binding PacketListTabIndex}">
                        <TabItem Header="Server Packets">
                            <ListBox ItemsSource="{Binding Packets}"
                                     SelectedItem="{Binding SelectedPacket}"
                                     DisplayMemberPath="DisplayText"
                                     FontFamily="Consolas" FontSize="10"
                                     MouseDoubleClick="PacketList_MouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMatched}" Value="True">
                                                <Setter Property="Background" Value="LightGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Direction}" Value="ClientToServer">
                                                <Setter Property="Foreground" Value="Blue"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Direction}" Value="ServerToClient">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </TabItem>

                        <TabItem Header="Bot Packets">
                            <ListBox ItemsSource="{Binding BotPackets}"
                                     SelectedItem="{Binding SelectedPacket}"
                                     DisplayMemberPath="DisplayText"
                                     FontFamily="Consolas" FontSize="10"
                                     MouseDoubleClick="PacketList_MouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMatched}" Value="True">
                                                <Setter Property="Background" Value="LightGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsMatched}" Value="False">
                                                <Setter Property="Background" Value="LightCoral"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </TabItem>

                        <TabItem Header="Unmatched">
                            <ListBox ItemsSource="{Binding UnmatchedPackets}"
                                     SelectedItem="{Binding SelectedPacket}"
                                     DisplayMemberPath="DisplayText"
                                     FontFamily="Consolas" FontSize="10"
                                     MouseDoubleClick="PacketList_MouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="LightYellow"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </TabItem>

                        <TabItem Header="Server Log">
                            <ScrollViewer>
                                <TextBox x:Name="ServerLogTextBox"
                                         Text="{Binding ServerLogContent, Mode=OneWay}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas"
                                         FontSize="10"
                                         TextWrapping="NoWrap"
                                         AcceptsReturn="True"
                                         Background="Black"
                                         Foreground="White"
                                         BorderThickness="0"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto"/>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Large File Viewer">
                            <controls:VirtualizedLogViewer DataContext="{Binding VirtualizedLogViewer}"/>
                        </TabItem>

                        <TabItem Header="EQMap Events">
                            <ListBox ItemsSource="{Binding EQMapLogEntries}"
                                     SelectedItem="{Binding SelectedEQMapEntry}"
                                     DisplayMemberPath="DisplayText"
                                     FontFamily="Consolas" FontSize="10"
                                     MouseDoubleClick="EQMapEventList_MouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPacketEntry}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding LogLevel}" Value="ERROR">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding LogLevel}" Value="WARN">
                                                <Setter Property="Foreground" Value="Orange"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Direction}" Value="C->S">
                                                <Setter Property="Foreground" Value="Blue"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Direction}" Value="S->C">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </TabItem>
                    </TabControl>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Selected: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedPacket.OpcodeName}"/>
                        <TextBlock Text=" | Size: "/>
                        <TextBlock Text="{Binding SelectedPacket.Size}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            
            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Background="Gray"/>
            
            <!-- Packet Details Panel -->
            <GroupBox Grid.Column="4" Header="Packet Details" Margin="5">
                <TabControl SelectedIndex="{Binding SelectedTabIndex}">
                    <TabItem Header="Hex Dump">
                        <ScrollViewer>
                            <TextBox Text="{Binding SelectedPacket.HexDump, Mode=OneWay}" 
                                     IsReadOnly="True" FontFamily="Consolas" FontSize="10"
                                     TextWrapping="NoWrap" AcceptsReturn="True"
                                     Background="Black" Foreground="Lime"
                                     BorderThickness="0"/>
                        </ScrollViewer>
                    </TabItem>
                    
                    <TabItem Header="Structure">
                        <ScrollViewer>
                            <TextBox Text="{Binding SelectedPacket.StructureData, Mode=OneWay}" 
                                     IsReadOnly="True" FontFamily="Consolas" FontSize="11"
                                     TextWrapping="Wrap" AcceptsReturn="True"
                                     Background="White" Foreground="Black"
                                     BorderThickness="0"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </GroupBox>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="150" Height="16" IsIndeterminate="{Binding IsLoading}" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>