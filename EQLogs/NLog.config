<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-EQLogs.txt">

  <!-- the targets to write to -->
  <targets>
    <!-- File Target -->
    <target xsi:type="File" name="logfile" fileName="../logs/EQLogs-${shortdate}.log"
            layout="${longdate} ${level:uppercase=true} [${logger}] ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveFileName="../logs/archive/EQLogs-{#}.log" />

    <!-- Console Target -->
    <target xsi:type="Console" name="logconsole"
            layout="${time} [${level:uppercase=true:padding=5}] ${logger:shortName=true:padding=15} ${message} ${exception:format=tostring}" />

    <!-- Debug Output Target -->
    <target xsi:type="Debugger" name="debugger"
            layout="${time} [${level:uppercase=true}] ${logger:shortName=true} ${message}" />

    <!-- Packet Analysis specific logging -->
    <target xsi:type="File" name="packetfile" fileName="../logs/PacketAnalysis-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] [${logger:shortName=true}] ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveFileName="../logs/archive/PacketAnalysis-{#}.log" />

    <!-- Docker/Service specific logging -->
    <target xsi:type="File" name="servicefile" fileName="../logs/Services-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] [${logger:shortName=true}] ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveFileName="../logs/archive/Services-{#}.log" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- File logging: All levels DEBUG and above -->
    <logger name="*" minlevel="Debug" writeTo="logfile" />

    <!-- Console logging: INFO and above to reduce noise -->
    <logger name="*" minlevel="Info" writeTo="logconsole" />

    <!-- Debug output: DEBUG and above when debugging -->
    <logger name="*" minlevel="Debug" writeTo="debugger" />

    <!-- Packet analysis specific logging -->
    <logger name="*Packet*" minlevel="Debug" writeTo="packetfile" />
    <logger name="*Parser*" minlevel="Debug" writeTo="packetfile" />

    <!-- Service specific logging -->
    <logger name="*Docker*" minlevel="Debug" writeTo="servicefile" />
    <logger name="*Service*" minlevel="Debug" writeTo="servicefile" />

    <!-- Reduce noise from specific loggers -->
    <logger name="Microsoft.*" minlevel="Warn" writeTo="logfile" final="true" />
    <logger name="System.*" minlevel="Warn" writeTo="logfile" final="true" />

    <!-- WPF/UI specific logging -->
    <logger name="*ViewModel*" minlevel="Debug" writeTo="logfile" />
    <logger name="*View*" minlevel="Debug" writeTo="logfile" />
  </rules>
</nlog>