<UserControl x:Class="EQLogs.Controls.VirtualizedLogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:EQLogs"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Converter for packet direction display -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Style for packet list items -->
        <Style x:Key="PacketListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#CCE5FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File Selection -->
        <GroupBox Header="Log File Selection" Grid.Row="0" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                         ItemsSource="{Binding AvailableLogFiles}"
                         SelectedItem="{Binding SelectedLogFile}"
                         Margin="5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FilePath}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding TotalSize, StringFormat=' ({0:N0} bytes)'}" Foreground="Gray" Margin="5,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="1" Content="Refresh Files"
                       Command="{Binding LoadLogFilesCommand}"
                       Margin="5" Padding="10,5"/>

                <Button Grid.Column="2" Content="Load File"
                       Command="{Binding SelectLogFileCommand}"
                       Margin="5" Padding="10,5"
                       IsEnabled="{Binding SelectedLogFile, Converter={x:Static local:ObjectToBooleanConverter.Default}}"/>
            </Grid>
        </GroupBox>

        <!-- Search and Filter Controls -->
        <GroupBox Header="Search and Filter" Grid.Row="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <TextBox Grid.Row="0" Grid.Column="0"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Margin="5"
                        ToolTip="Search by opcode name..."/>

                <Button Grid.Row="0" Grid.Column="1" Content="Search"
                       Command="{Binding SearchCommand}"
                       Margin="5" Padding="10,5"
                       IsEnabled="{Binding IsSearching, Converter={x:Static local:BooleanToVisibilityConverterReverse.DefaultReverse}}"/>

                <!-- Filters -->
                <TextBox Grid.Row="1" Grid.Column="0"
                        Text="{Binding OpcodeFilter, UpdateSourceTrigger=PropertyChanged}"
                        Margin="5"
                        ToolTip="Filter by opcode..."/>

                <ComboBox Grid.Row="1" Grid.Column="1"
                         Margin="5" Width="120"
                         SelectionChanged="DirectionFilter_SelectionChanged">
                    <ComboBoxItem Content="All Directions" Tag="All"/>
                    <ComboBoxItem Content="Client to Server" Tag="ClientToServer"/>
                    <ComboBoxItem Content="Server to Client" Tag="ServerToClient"/>
                </ComboBox>

                <Button Grid.Row="1" Grid.Column="2" Content="Apply Filters"
                       Command="{Binding ApplyFiltersCommand}"
                       Margin="5" Padding="10,5"/>

                <Button Grid.Row="1" Grid.Column="3" Content="Clear"
                       Command="{Binding ClearFiltersCommand}"
                       Margin="5" Padding="10,5"/>
            </Grid>
        </GroupBox>

        <!-- Loading Status -->
        <Border Grid.Row="2" Background="#F0F8FF" BorderBrush="#B0C4DE" BorderThickness="1" Margin="5"
               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" Margin="10,5">
                <TextBlock Text="Loading..." FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding LoadingStatus}"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="15" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Packet List with Virtual Scrolling -->
            <GroupBox Header="Packets" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Packet count info -->
                    <TextBlock Grid.Row="0" Text="{Binding PacketCountDisplay}"
                              Margin="5" FontSize="12" Foreground="Gray"/>

                    <!-- Virtual scrolling packet list -->
                    <ScrollViewer Grid.Row="1" x:Name="PacketScrollViewer"
                                 VerticalScrollBarVisibility="Auto"
                                 ScrollChanged="PacketScrollViewer_ScrollChanged">
                        <ListBox ItemsSource="{Binding DisplayedPackets}"
                                SelectedItem="{Binding SelectedPacket}"
                                ItemContainerStyle="{StaticResource PacketListItemStyle}"
                                VirtualizingPanel.IsVirtualizing="True"
                                VirtualizingPanel.VirtualizationMode="Recycling">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Timestamp, StringFormat=HH:mm:ss.fff}"
                                                  Foreground="Gray" Width="80" Margin="0,0,10,0"/>
                                        <Rectangle Grid.Column="1" Width="8" Height="8" Margin="0,0,5,0">
                                            <Rectangle.Fill>
                                                <SolidColorBrush Color="{Binding Direction, Converter={x:Static local:PacketDirectionToColorConverter.Instance}}"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <TextBlock Grid.Column="2" Text="{Binding OpcodeName}" FontWeight="Bold"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Size, StringFormat={}{0} bytes}"
                                                  Foreground="Gray" Margin="10,0,5,0"/>
                                        <TextBlock Grid.Column="4" Text="{Binding OpcodeHex}"
                                                  Foreground="DarkGray" FontFamily="Courier New" FontSize="10"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- Virtual scroll position -->
                    <Slider Grid.Row="2"
                           Value="{Binding ScrollPosition}"
                           Maximum="{Binding ScrollMaximum}"
                           Margin="5"
                           TickPlacement="BottomRight"
                           TickFrequency="100"
                           IsSnapToTickEnabled="False"
                           SmallChange="10"
                           LargeChange="100"/>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Search Results / Details Panel -->
            <TabControl Grid.Column="2">
                <TabItem Header="Search Results">
                    <ListBox ItemsSource="{Binding SearchResults}"
                            SelectedItem="{Binding SelectedSearchResult}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Packet.OpcodeName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Packet.Timestamp, StringFormat=HH:mm:ss.fff}" Foreground="Gray"/>
                                    <TextBlock Text="{Binding PacketIndex, StringFormat=Index: {0}}" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding JumpToSearchResultCommand}"
                                                      CommandParameter="{Binding SelectedSearchResult}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListBox>
                </TabItem>

                <TabItem Header="Packet Details">
                    <ScrollViewer>
                        <TextBox Text="{Binding SelectedPacket.StructureData, Mode=OneWay}"
                                IsReadOnly="True"
                                FontFamily="Courier New"
                                FontSize="12"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"/>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock Text="{Binding LoadingStatus}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding FileSizeDisplay}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedLogFile.FilePath}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>